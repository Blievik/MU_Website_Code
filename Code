  <script>
    const navbar = document.querySelector('.navbar');
    window.addEventListener('scroll', function() { navbar.classList.toggle('scrolled', window.scrollY > 40); });

    const sections = document.querySelectorAll('section[id]');
    const navLinks = document.querySelectorAll('.nav-links a[href^="#"]');
    window.addEventListener('scroll', function() {
      var current = '';
      sections.forEach(function(sec) { if (window.scrollY >= sec.offsetTop - 120) current = sec.id; });
      navLinks.forEach(function(a) { a.classList.toggle('active', a.getAttribute('href') === '#' + current); });
    });

    var revealEls = document.querySelectorAll('.reveal');
    var revealObs = new IntersectionObserver(function(entries) {
      entries.forEach(function(e, i) {
        if (e.isIntersecting) { setTimeout(function() { e.target.classList.add('visible'); }, i * 80); revealObs.unobserve(e.target); }
      });
    }, { threshold: 0.08 });
    revealEls.forEach(function(el) { revealObs.observe(el); });

    var counters = document.querySelectorAll('.stat-num');
    var cntObs = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (!entry.isIntersecting) return;
        var el = entry.target, target = parseInt(el.dataset.target);
        var cur = 0, steps = 60, duration = 1400, inc = target / steps;
        var timer = setInterval(function() {
          cur += inc;
          if (cur >= target) { cur = target; clearInterval(timer); }
          el.textContent = Math.floor(cur);
        }, duration / steps);
        cntObs.unobserve(el);
      });
    }, { threshold: 0.5 });
    counters.forEach(function(c) { cntObs.observe(c); });

    var gameData = {
      valorant: { title: 'Valorant', genre: 'Tactical Shooter', desc: 'A 5v5 character-based tactical shooter from Riot Games. Teams alternate attacking and defending, with each round shaped by precise aim, Agent abilities, and team strategy. Currently one of the most dominant titles in collegiate and professional esports.', tag: 'BIG East - PlayVS Competitive' },
      league: { title: 'League of Legends', genre: 'MOBA', desc: 'The most played PC game on the planet. Two teams of five champions battle to destroy the enemy Nexus. With hundreds of champions and deep strategic layers, LoL has anchored collegiate esports for over a decade.', tag: 'BIG East - PlayVS Competitive' },
      fortnite: { title: 'Fortnite', genre: 'Battle Royale', desc: 'Epic Games massively popular battle royale where 100 players fight to be the last one standing. Its unique building mechanics, constant seasonal updates, and enormous cultural footprint make it one of the most-played games worldwide.', tag: 'BIG East - PlayVS Competitive' },
      apex: { title: 'Apex Legends', genre: 'Battle Royale / Hero Shooter', desc: 'A fast-paced battle royale from Respawn Entertainment where squads of Legends use unique abilities to outlast the competition. Known for its fluid movement system and high skill ceiling.', tag: 'BIG East - PlayVS Competitive' },
      overwatch: { title: 'Overwatch 2', genre: 'Hero Shooter', desc: 'Blizzard 5v5 hero shooter built around objective-focused teamplay. With a roster spanning damage, tank, and support roles, Overwatch 2 rewards communication, coordination, and game sense above all.', tag: 'BIG East - PlayVS Competitive' },
      rocketleague: { title: 'Rocket League', genre: 'Vehicular Soccer', desc: 'Rocket-powered cars playing soccer - a simple concept with an insane skill ceiling. One of the most unique esports titles in existence, with a massive collegiate and professional scene worldwide.', tag: 'BIG East - PlayVS Competitive' },
      siege: { title: 'Rainbow Six Siege', genre: 'Tactical Shooter', desc: 'Ubisoft ultra-tactical 5v5 shooter where destructible environments and operator abilities create an unmatched strategic experience. Siege holds a special place in MU Esports history - we won back-to-back NECC Championships in this title.', tag: '2x NECC Champions - BIG East - PlayVS' },
      smash: { title: 'Super Smash Bros Ultimate', genre: 'Platform Fighter', desc: 'Nintendo beloved crossover platform fighter featuring iconic characters from across gaming history. Played both at our competitive level and our monthly LAN party tournaments.', tag: 'BIG East - PlayVS Competitive' },
      marvel: { title: 'Marvel Rivals', genre: 'Hero Shooter', desc: 'NetEase 6v6 hero shooter set in the Marvel universe with a huge roster of Marvel characters. Marvel Rivals burst onto the esports scene and has quickly become one of our newest and most exciting offerings.', tag: 'BIG East - PlayVS Competitive' }
    };

    var modal = document.getElementById('gameModal');
    document.querySelectorAll('.game-chip').forEach(function(chip) {
      chip.addEventListener('click', function() {
        var d = gameData[chip.dataset.game];
        if (!d) return;
        document.getElementById('modalGenre').textContent = d.genre;
        document.getElementById('modalTitle').textContent = d.title;
        document.getElementById('modalDesc').textContent = d.desc;
        document.getElementById('modalTag').textContent = d.tag;
        modal.classList.add('active');
      });
    });
    document.getElementById('modalClose').addEventListener('click', function() { modal.classList.remove('active'); });
    modal.addEventListener('click', function(e) { if (e.target === modal) modal.classList.remove('active'); });
    document.addEventListener('keydown', function(e) { if (e.key === 'Escape') modal.classList.remove('active'); });
  </script>

